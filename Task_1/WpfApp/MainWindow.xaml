<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="56" LastChildFill="False" VerticalAlignment="Top" Width="167"/>
        <Menu HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="782">
            <MenuItem Background="#FF939393" Header="File" Height="36" Width="49" FontSize="18" RenderTransformOrigin="1.085,1.369">
                <MenuItem Header="Open"
                          Click="OnOpenClick"/>
                <MenuItem Header="Save"
                          Click="OnSaveClick"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
